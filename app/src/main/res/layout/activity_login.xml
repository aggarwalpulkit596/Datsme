<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:id="@+id/rootlayout_LoginActivity"
    android:background="@drawable/custom_background">
<LinearLayout
    android:layout_weight="2"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:contentDescription="Logo"
        android:layout_height="170dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/logo"
        android:transitionName="logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey,"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:id="@+id/hey"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="DATSME"
        android:textColor="#FFF"
        android:textSize="45sp"
        android:textStyle="bold" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableStart="@drawable/cellphone"
        android:drawablePadding="2dp"
        android:background="@drawable/button_background_white"
        android:textColor="#4267B2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:paddingLeft="15dp"
        android:onClick="phoneauth"
        android:id="@+id/btn_phonesignin"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:elevation="2dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="Continue with Mobile Number"
        android:textSize="14sp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_fbSignIn"
        style="@style/FacebookLoginButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/cellphone"
        android:gravity="center_vertical|center_horizontal"
        android:drawablePadding="2dp"
        android:elevation="2dp"
        android:textStyle="normal"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="35dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="35dp" />


    <com.google.android.gms.common.internal.SignInButtonImpl
        android:id="@+id/btn_gSignIn"
        android:textAllCaps="false"
        android:textColor="#4267B2"
        android:gravity="center"
        android:textSize="14sp"
        android:text="Continue with Google"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableStart="@drawable/googleg_standard_color_18"
        android:background="@drawable/button_background_white"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp" />


</LinearLayout>
</LinearLayout>