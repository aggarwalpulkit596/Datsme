<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give feedback on this profile"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:id="@+id/title"
            android:textSize="18dp"
            android:textColor="#000"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/redcross"
            android:layout_width="25dp"
            android:id="@+id/cross"
            android:layout_height="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/title"
            android:id="@+id/line"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:background="#d3d3d3"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="25dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/line"
            android:id="@+id/feedbackicon"
            android:src="@drawable/feedback"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:id="@+id/helptext"
            android:layout_marginLeft="10dp"
            android:text="Help us understand what's happening."
            android:layout_toRightOf="@+id/feedbackicon"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:id="@+id/text1"
            android:background="@drawable/feedbacktextbackground"
            android:text="Pretending to someone"
            android:layout_below="@+id/helptext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:id="@+id/text2"
            android:background="@drawable/feedbacktextbackground"
            android:text="Fake Account"
            android:layout_below="@+id/text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/text2"
            android:id="@+id/text3"
            android:background="@drawable/feedbacktextbackground"
            android:text="Fake Name"
            android:layout_below="@+id/text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:id="@+id/text4"
            android:background="@drawable/feedbacktextbackground"
            android:text="Posting inappropriate things"
            android:layout_below="@+id/text3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:id="@+id/text5"
            android:background="@drawable/feedbacktextbackground"
            android:text="Something else"
            android:layout_below="@+id/text4"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_below="@+id/text5"
          android:layout_marginTop="20dp"
          android:padding="10dp"
          android:id="@+id/alert"
          android:layout_height="wrap_content">
          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_centerVertical="true"
              android:id="@+id/alertdanger"
              android:src="@drawable/alertfeedback" />
          <TextView
              android:layout_width="wrap_content"
              android:lineSpacingExtra="5dp"
              android:text="Contact the police in your area if someone is in immediate danger."
              android:textSize="12dp"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@+id/alertdanger"
              android:layout_height="wrap_content" />
      </RelativeLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_below="@+id/alert"-->
            <!--android:id="@+id/linebelow"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="#d3d3d3"-->
            <!--android:orientation="horizontal" />-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/alert"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="send"
            android:textSize="15dp"
            android:id="@+id/sendReport"
            android:textColor="#fff"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_datsme_color"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>