<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg">
    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_otp1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:maxLength="1"
        android:textSize="20dp"/>


        <EditText
            android:id="@+id/edit_otp2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_otp3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_otp4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_otp5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_otp6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_below="@id/layout_otp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Timer"
        />
    <TextView
        android:id="@+id/text_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_timer"
        android:text="Resend"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"/>
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/text_resend"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_background_blue"
            android:text="Cancel"
            android:textSize="20dp"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"
            android:text="Verify"
            android:textSize="20dp"
            android:textColor="#fff" />
    </LinearLayout>


</RelativeLayout>